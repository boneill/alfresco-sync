   <!-- Register DeleteOldMinorVersion Repo Action -->
    <bean id="delete-old-minor-versions" class="au.org.amc.seedim.action.DeleteOldMinorVersions" parent="action-executer">
        <property name="nodeService">
            <ref bean="NodeService" />
        </property>
        <property name="versionService">
            <ref bean="VersionService" />
          </property>
          <property name="versionAge">
            <value>${amc.versionAge}</value>
        </property>        
    </bean>
    
    <!-- Register CreateSystemFolder Repo Action -->
    <bean id="create-system-folder" class="au.org.amc.seedim.action.CreateSystemFolder" parent="action-executer">
        <property name="nodeService">
            <ref bean="NodeService" />
        </property>
        <property name="behaviourFilter"> 
        	<ref bean="policyBehaviourFilter" />
        </property>        
    </bean>
    
    <!-- Register CreatePowerUserReport Repo Action -->
    <bean id="create-power-user-report" class="au.org.amc.seedim.action.CreatePowerUserReport" parent="action-executer">
        <property name="siteService">
            <ref bean="SiteService" />
        </property> 
        <property name="nodeService">
            <ref bean="NodeService" />
        </property>
        <property name="contentService">
            <ref bean="ContentService" />
        </property>  
        <property name="searchService">
            <ref bean="SearchService" />
        </property> 
        <property name="sysAdminParams">
            <ref bean="sysAdminParams" />
        </property>
        <property name="reportFolderPath">
            <value>/app:company_home/st:sites/cm:Records-and-Info-Mgt/cm:documentLibrary/cm:DOC_x0020_and_x0020_Info_x0020_Check_x0020_Ups/cm:AMC_x0020_Power_x0020_User_x0020_Reports</value>
        </property>      
    </bean>

    <!-- JS Util class -->
   <bean id="AMCJsUtil" parent="baseJavaScriptExtension" 
      class="au.org.amc.seedim.util.AmcJsUtils">
      
    <property name="extensionName" value="amcJsUtils"/>
    <!--<property name="policyBehaviourFilter" ref="policyBehaviourFilter" />-->
    <property name="allServices" ref="AllServices" />

   </bean>

    <bean id="AllServices"
      class="au.org.amc.repo.services.AllServices"
      init-method="init">
    
    <property name="mimetypeService" ref="MimetypeService" />
    <property name="authenticationService" ref="AuthenticationService" />
    <property name="contentService" ref="ContentService" />
    <property name="dictionaryService" ref="DictionaryService" />
    <property name="fileFolderService" ref="FileFolderService" />
    <property name="permissionService" ref="PermissionService" />
    <property name="workflowService" ref="WorkflowService" />
    <property name="siteService" ref="SiteService" />
    <property name="nodeService" ref="NodeService" />
    <property name="searchService" ref="SearchService" />
    <property name="personService" ref="PersonService" />
    <property name="namespaceService" ref="NamespaceService" />
    <property name="transactionService" ref="TransactionService" />
    <property name="serviceRegistry" ref="ServiceRegistry" />
    <property name="policyBehaviourFilter" ref="policyBehaviourFilter" />
    <property name="ownableService" ref="OwnableService" />
    <property name="lockService" ref="lockService" />
    <property name="jobLockService" ref="jobLockService" />
    <property name="ActionService" ref="actionService" />
  </bean>
  
</beans>
