<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Bean for Doc ID inclusion when docs created -->
	<bean id="createNodeBehaviour" class="au.org.amc.repo.behaviour.NewContentBehaviour" init-method="init">
        <property name="nodeService" ref="NodeService" />
        <property name="policyComponent" ref="policyComponent" />
        <property name="repositoryId">
            <value>${amc.repositoryId}</value>
        </property>
        <property name="padding">
            <value>0000000</value>
        </property>
        <property name="urlPrefix">
            <value>/share/proxy/alfresco/amc/doc/</value>
        </property>
    </bean>
    
    <!-- Ensure system folders are setup with correct permissions and metadata -->
    <bean id="systemFolderBehaviour" class="au.org.amc.repo.behaviour.SystemFolderBehaviour" depends-on="au.org.amc.dictionaryBootstrap" init-method="init">
        <property name="nodeService" ref="NodeService" />
        <property name="policyComponent" ref="policyComponent" />
        <property name="personService" ref="PersonService"/>
        <property name="permissionService" ref="PermissionService"/>
        <property name="systemFolderManagerAuthorityName">
            <value>GROUP_System Folder Managers</value>
        </property>
        <property name="systemFolderPermission">
            <value>SiteConsumer</value>
        </property>        
        <property name="dictionaryService" ref="dictionaryService"/>
    </bean>
  
