<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
   
   <!--
    Define beans related to this Share extension here, such as
     evaluators and resource bootstrapping.

     Note. Any configuration related to the whole Share.war webapp
           (i.e. not specific to this share extension) should be
            placed in the alfresco-allinone/share/src/main/resources/alfresco/web-extension/custom-slingshot-application-context.xml file
   -->

   <!-- Add module specific messages and labels -->
   <bean id="amc-share.resources"
         class="org.springframework.extensions.surf.util.ResourceBundleBootstrapComponent">
      <property name="resourceBundles">
         <list>
            <value>alfresco.web-extension.messages.amc-share</value>
         </list>
      </property>
   </bean>
   
    <!-- Share Configuration -->
  <bean id="amc.share.config" class="org.springframework.extensions.config.ConfigBootstrap" init-method="register">
    <property name="configService" ref="web.config" />
    <property name="configs">
      <list>
        <value>classpath:alfresco/web-extension/amc-share-config-custom.xml</value>
       </list>
    </property>
  </bean>    
   <!-- Custom Evaluator to check for AMC System Folder Type-->
   <bean id="seed.evaluator.doclib.metadata.isSystemFolderType" parent="evaluator.doclib.action.nodeType">
      <property name="types">
         <list>
            <value>amc:systemFolder</value>
         </list>
      </property>
   </bean>
   <!-- Custom Evaluator to check for AMC Archive Folder -->
  <bean id="seed.evaluator.doclib.action.isArchiveFolder" parent="evaluator.doclib.action.value">
    <property name="accessor" value="node.properties.amc:systemFolderInactive" />
    <property name="comparator">
        <bean class="org.alfresco.web.evaluator.StringEqualsComparator">
            <property name="value" value="true" />
        </bean>
    </property>
</bean>
<!-- Custom Evaluator to check for AMC System Folder Property amc:isSystemFolder set to true -->
<bean id="seed.evaluator.doclib.action.isSystemFolder" parent="evaluator.doclib.action.value">
    <property name="accessor" value="node.properties.amc:isSystemFolder" />
    <property name="comparator">
        <bean class="org.alfresco.web.evaluator.StringEqualsComparator">
            <property name="value" value="true" />
        </bean>
    </property>
</bean>
 <!-- Custom Evaluator to check for current logged in user is a member of GROUP_System Folder Managers -->
 
<bean id="seed.evaluator.doclib.action.isSystemFolderManager" parent="evaluator.doclib.action.groupMembership">
      <property name="groups">
         <list>
            <value>GROUP_System Folder Managers</value>
         </list>
      </property>
   </bean>
   <bean id="seed.evaluator.doclib.action.isAdministrator" parent="evaluator.doclib.action.groupMembership">
      <property name="groups">
         <list>
            <value>GROUP_ALFRESCO_ADMINISTRATORS</value>
         </list>
      </property>
   </bean>
   
 <!-- Custom Evaluator to check if node is a folder-->  
 <bean id="seed.evaluator.doclib.metadata.isFolderType" parent="evaluator.doclib.action.nodeType">
      <property name="types">
         <list>
            <value>cm:folder</value>
         </list>
      </property>
   </bean>
    <bean id="seed.evaluator.doclib.action.showSystemFolderAction" parent="evaluator.doclib.action.chainedMatchOne">
      <property name="evaluators">
         <list>
            <ref bean="seed.evaluator.doclib.action.isSystemFolderManager" />
            <ref bean="seed.evaluator.doclib.action.isAdministrator" />
         </list>
      </property>
   </bean>
   <!-- ****************************SYNC Evaluators****************************************** -->
   <!--  -->
  <bean id="seed.evaluator.doclib.action.HasSynchSourceAspect" class="org.alfresco.web.evaluator.HasAspectEvaluator">
    <property name="aspects">
      <list>
        <value>synch:synchSourceAspect</value>
      </list>
    </property>
  </bean>
    <bean id="seed.evaluator.doclib.action.HasSynchSMemberNodeAspect" class="org.alfresco.web.evaluator.HasAspectEvaluator">
    <property name="aspects">
      <list>
        <value>synch:synchMemberNodeAspect</value>
      </list>
    </property>
  </bean>
  
    <bean id="seed.evaluator.doclib.action.HasSynchFailedAspect" class="org.alfresco.web.evaluator.HasAspectEvaluator">
    <property name="aspects">
      <list>
        <value>synch:synchFailedAspect</value>
      </list>
    </property>
  </bean>
  
  <bean id="seed.evaluator.doclib.action.isSynchFailed" parent="evaluator.doclib.action.value">
    <property name="accessor" value="node.properties.synch:synchJobStatus" />
    <property name="comparator">
        <bean class="org.alfresco.web.evaluator.StringEqualsComparator">
            <property name="value" value="Failed" />
        </bean>
    </property>
  </bean>

</beans>